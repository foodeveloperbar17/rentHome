<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.TempAddApartmentActivity">

    <TextView
        android:id="@+id/add_apartment_text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="ADD APARTMENT"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="name"
        app:layout_constraintTop_toBottomOf="@+id/add_apartment_text_view_id" />


    <EditText
        android:id="@+id/description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="description"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_text" />

    <EditText
        android:id="@+id/price_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="price"
        app:layout_constraintTop_toBottomOf="@+id/description_edit_text" />


    <EditText
        android:id="@+id/lat_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="lat"
        app:layout_constraintTop_toBottomOf="@+id/price_edit_text" />


    <EditText
        android:id="@+id/lng_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="lng"
        app:layout_constraintTop_toBottomOf="@+id/lat_edit_text" />

    <Button
        android:id="@+id/upload_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload images"
        app:layout_constraintTop_toBottomOf="@+id/lng_edit_text" />

    <ImageView
        android:id="@+id/upload_main_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/upload_secondary_image_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/upload_images" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upload_secondary_image_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/add_apartment_button"
        app:layout_constraintTop_toBottomOf="@+id/upload_main_image_view" />

    <Button
        android:id="@+id/add_apartment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add apartment"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>