<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    android:background="#D4E3EA">

    <ImageView
        android:id="@+id/apartment_image_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/common_google_signin_btn_text_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apartment_description_textview_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Description"
        app:layout_constraintBottom_toTopOf="@+id/apartment_rating_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/apartment_image_id"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/apartment_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:stepSize="1."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/apartment_image_id"
        app:layout_constraintTop_toBottomOf="@+id/apartment_description_textview_id" />

    <ToggleButton
        android:id="@+id/favourite_toggle_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/button_favourite"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>